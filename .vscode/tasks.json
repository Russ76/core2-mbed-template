{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release clean",
            "type": "shell",
            "command": "mbed",
            "args": ["compile", "--profile", "release", "-c", "-N", "firmware", 
                     "--source", "./../mbed-os", "--source", ".", "--build", ".\\BUILD\\CORE2-RELEASE"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": 
                    {
                        "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "severity": 5,
                        "message": 6
                    }            
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "mbed",
            "args": ["compile", "--profile", "release", "-N", "firmware",  
                "--source", "./../mbed-os", "--source", ".", "--build", ".\\BUILD\\CORE2-RELEASE"],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": 
                    {
                        "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "severity": 5,
                        "message": 6
                    }            
            }
        },
        {
            "label": "FLASH FIRMWARE (RELEASE)",
            "type": "shell",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    ".\\BUILD\\CORE2-RELEASE\\firmware.bin",
                    "0x08000000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
            "osx": {
                
            }
        }
    ]
}